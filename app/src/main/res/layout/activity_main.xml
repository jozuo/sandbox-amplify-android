<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/view_sign_up_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:hint="the code you receive via email"
            android:layout_marginHorizontal="20dp" />

        <EditText
            android:id="@+id/view_sign_up_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="phone"
            android:hint="the code you receive via phone"
            android:layout_marginHorizontal="20dp" />

        <Button
            android:id="@+id/view_sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="SingUp"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/view_confirm_sign_up_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="the code you receive via email"
            android:layout_marginHorizontal="20dp" />

        <Button
            android:id="@+id/view_confirm_sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:text="Confirm SingUp"
            android:textAllCaps="false" />


        <EditText
            android:id="@+id/view_sing_in_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="user id"
            android:text="username"
            android:layout_marginHorizontal="20dp" />


        <EditText
            android:id="@+id/view_sing_in_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password123"
            android:inputType="textPassword"
            android:layout_marginHorizontal="20dp" />

        <Button
            android:id="@+id/view_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:text="SingIn"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/view_confirm_sign_in_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="the code you receive via email"
            android:layout_marginHorizontal="20dp" />

        <Button
            android:id="@+id/view_confirm_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:text="Confirm SingIn"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/view_google_sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Google SingIn!!"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/view_google_sign_out_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:text="Sign out"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
